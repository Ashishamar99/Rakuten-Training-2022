
public class Book {
	private String title;
	public String getTitle() {
		return title;
	}
	public void setTitle(String title) {
		this.title = title;
	}
	public float getPrice() {
		return price;
	}
	public void setPrice(float price) {
		if(price<=0)
			throw new IllegalArgumentException("Price can't be 0.");
		this.price = price;
	}
	private float price;
}
